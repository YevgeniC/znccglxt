<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="se.zust.dao.InlibraryDao">
	<!-- 配置resultMap属性，进行表字段与实体类属性映射 -->
	<resultMap id="inlibraryMap" type="se.zust.entity.Inlibrary" >
		<id column="pid" property="pid"  />
		<result column="pnum" property="pnum"/>
		<result column="pname" property="pname"/>
		<result column="area" property="area"/>
		<result column="room" property="room"/>
		<result column="in_date" property="intime" jdbcType="TIMESTAMP"/>
		<result column="in_user" property="inuser"/>
	</resultMap>

	<insert id="addInlibrary" parameterType="se.zust.entity.Inlibrary">
        INSERT INTO inlibrary(pnum,pname,area,room,in_date,in_user) VALUES (#{pnum},#{pname},#{area},#{room},#{intime},#{inuser})
    </insert>

    <delete id="deleteInlibrary" parameterType="se.zust.entity.Inlibrary">
        DELETE FROM inlibrary WHERE pid = #{pid}
    </delete>

	<select id="selectAllInlibrary" resultMap="inlibraryMap">
        SELECT * FROM inlibrary ORDER BY in_date DESC limit #{0} ,#{1}
     </select>
	<select id="selectAllInlibraryCount" resultType="Integer">
        SELECT IFNULL(COUNT(*),0) FROM inlibrary
    </select>

    <select id="selectBy" resultMap="inlibraryMap">
		SELECT * FROM inlibrary WHERE pname LIKE "%"#{0}"%" or pid LIKE "%"#{0}"%" Order BY in_date DESC limit #{1},#{2}
	</select>
    <select id="selectByCount" parameterType="String"  resultType="Integer">
		select IFNULL(COUNT(*),0) FROM inlibrary WHERE pname like "%"#{_parameter}"%" or pid LIKE "%"#{_parameter}"%"
	</select>
</mapper>
